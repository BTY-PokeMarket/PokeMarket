<%- include('../partials/header') %>

<a href="javascript:history.back()"> < Go Back </a>
<br>
<br>


<h2>Pokedex Name: <%= pokedex.pokedexName %></h2>
<% if (user) { %>
  <% if (pokedex.userName == user.name) { %>
    <p>You currently have <%= pokedex.pokecoins %> pokecoins left</p>
      <!-- edit pokedex button -->
    <form action="/pokedex/<%= pokedex.id %>/edit" method="GET">
      <button type="submit">Edit Pokedex Name</button>
    </form>
    <!-- edit pokedex button -->
  <% } %>
<% } %>

<br>

<div class="pokedex">
<div class="PokeContainer">
<div class="personalView">
 <% pokedex.pokemon.forEach(function(p) { %>
    <div class="FullCard">
      <div class="card" style="width: 100px;">
        <% if (user) { %>
        <a href="<%= pokedex.id %>/pokemon/<%= p.id %>/details"><img class="card-img-top" id="PokedexSprite" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= p.dex %>.png" alt="Card image cap">
        </a>
        <% } else { %>
          <img class="card-img-top" id="PokedexSprite" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= p.dex %>.png" alt="Card image cap">
        </a>
        <% } %>
      </div>
    </div>
    <br>
    <br>
    <br>
   <% }) %>
</div>

      <div class="ADDBUTTON">
      <% if (user) { %>
        <% if (pokedex.userName == user.name) { %>
        <button ><a href="/pokedex/<%= pokedex.id%>/pokemon">Add Pokemon</a></button>
        <br>
        <% } %>
      <% } %>
      </div>

</div>
</div>
<%- include('../partials/footer') %>