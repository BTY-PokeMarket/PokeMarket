<%- include('../partials/header') %>

<h1>Details Page</h1>

<% if (pokemon) { %>
  <p> Displaying Pokemon Info</p>
  <% if (sprite) { %>
    <img src="<%= sprite.sprites.front_default%>">
    <% } %>
  <%= pokemon.flavor_text_entries[1].flavor_text %> <br>
    
        <% } %>

<% if (userPokedex.pokemon.includes(foundPokemon._id)) { %>
  <br>
  <% if (user.pokedex == userPokedex.id) { %>
  <form action="/pokedex/<%= userPokedex.id%>?_method=DELETE" method="POST">
    <input type="hidden" name="pokemonId" value="<%= pokemon.id %>">
    <button type="submit">Delete Pokemon From My Pokedex</button>
  </form>
  <% } %>
  <a href="javascript:history.back()">Go Back</a>
  <% } else { %>
    <form action="/pokedex/<%= userPokedex.id/pokemon %>" method="POST">
      <input type="hidden" name="pokemonId" value="<%= pokemon.id %>">
      <button type="submit">Add To Your Pokedex</button>
    </form>
    <% } %>

<%- include('../partials/footer') %>